<?xml version="1.0" encoding="utf-8"?>
<com.ytjojo.viewlib.nestedsrolllayout.NestedScrollLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <TextView
        app:scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
        android:text="这是头部"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#30ff0ff0"
        android:layout_width="match_parent"
        android:minHeight="60dp"
        android:layout_height="200dp"/>
    <com.ytjojo.viewlib.nestedsrolllayout.EmbeddedWebView
        android:id="@+id/webview"
        app:scrollFlags="scroll"
        app:behavior="com.ytjojo.viewlib.nestedsrolllayout.ScrollViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.ytjojo.viewlib.nestedsrolllayout.NestedScrollLayout>