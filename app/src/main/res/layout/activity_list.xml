<?xml version="1.0" encoding="utf-8"?>
<com.github.ytjojo.supernestedlayout.SuperNestedLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:fitsSystemWindows="true"
android:layout_width="match_parent"
android:layout_height="match_parent"
>
    <TextView
        android:fitsSystemWindows="true"
        app:controlBehaviorName="ScrollViewBehavior"
        app:scrollFlags="scroll|exitUntilCollapsed"
        android:text="这是头部"
        android:gravity="center"
        android:textSize="20sp"
        android:minHeight="?actionBarSize"
        android:background="#70ff0000"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <com.github.ytjojo.supernestedlayout.CompatListView
        android:id="@+id/listView"
        app:controlBehaviorName="ScrollViewBehavior"
        app:scrollFlags="scroll"
        android:background="#88EEEEEE"
        app:behavior="com.github.ytjojo.supernestedlayout.ScrollViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.github.ytjojo.supernestedlayout.CompatListView>
    <com.github.ytjojo.supernestedlayout.demo.RefreshHeaderLoadingView
        android:layout_width="match_parent"
        android:id="@+id/refreshFooter"
        android:layout_gravity="top"
        android:fitsSystemWindows="true"
        app:behavior="com.github.ytjojo.supernestedlayout.RefreshFooterBehavior"
        android:layout_height="60dp"/>
</com.github.ytjojo.supernestedlayout.SuperNestedLayout>